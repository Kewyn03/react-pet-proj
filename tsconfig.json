{
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    // base options
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    //    "noEmit": true, break webpack build
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    // strictness

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    //    "plugins": [
    //      {
    //        "name": "next"
    //      }
    //    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ],
      "shared": [
        "./src/shared"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/app/types/global.d.ts",
    "./config/jest/setupTests.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
