{
  "compilerOptions": {

    "lib": [
      "dom",
      "dom.iterable",
    ],
    // base options

    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "module": "ESNext",
//    "moduleDetection": "force",
    "moduleResolution": "node",
    "resolveJsonModule": true,

//    "noEmit": true, break webpack build
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",

    // strictness

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,

//    "plugins": [
//      {
//        "name": "next"
//      }
//    ],
//    "paths": {
//      "@/*": [
//        "./src/*"
//      ]
//    }
  },
//  "include": [
//    "**/*.ts",
//    "**/*.tsx",
//  ],
//  "exclude": [
//    "node_modules"
//  ],
   "ts-node": {
     "compilerOptions": {
       "module": "CommonJS"
     }
   }
}